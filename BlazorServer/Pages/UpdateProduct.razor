@page "/updateproduct/{Id:int}"
@inherits UpdateProductBase
<h3>Update Product</h3>

@if (Product != null)
{
    

    <EditForm Model="@Product" OnValidSubmit="@Updateproduct">
        <div class="form-group">
            <label>Id</label>
            <InputNumber class="form-control" @bind-Value="Product.Id" />
        </div>
        <div class="form-group">
            <label>Name</label>
            <InputText class="form-control" @bind-Value="Product.Name" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <InputText class="form-control" @bind-Value="Product.Description" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <InputNumber class="form-control" @bind-Value="Product.Price" />
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Update</button>
    </EditForm>
    <br/>
    <div class="row">
        <div class="col-lg-3 text-primary">
            <a class="btn btn-secondary btn-sm" href="/products" role="button">Go Back To List</a>
        </div>
    </div>
}
else
{
    <h4>Loading...</h4>
}